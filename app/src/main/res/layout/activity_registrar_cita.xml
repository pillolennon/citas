<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarCita">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/barberia_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="90dp"
            android:text="Registrar Cita"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/title"
            android:textSize="35sp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittex_custom"
            android:hint="Nombre"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txtServicio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittex_custom"
            android:hint="Servicio"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <!-- Boton para seleccionar fecha -->

        <Button
            android:id="@+id/btnSeleccionarFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            style="@style/ButtonNoRound"
            android:drawableLeft="@drawable/citas"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_fecha"
            android:textSize="20dp"
            android:background="@color/title"
            android:textColor="@color/white"
            android:layout_marginLeft="235dp"
            android:textStyle="bold"
            android:fontFamily="times new roman"
            android:layout_marginTop="-40dp" />



        <!--<DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:spinnersShown="true"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:calendarTextColor="@color/black"
            android:layout_marginLeft="70dp"/> -->



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="bottom">

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="470dp"
            android:backgroundTint="@color/btnIniciarSesionColor"
            android:text="SIGUIENTE" />


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
